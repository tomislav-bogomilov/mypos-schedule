                <th scope="col">Comment</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="row">3</th>
                <td>{{ "+1 day"|date("d.m.Y") }}</td>
                <td>{{ 'Charles P.' }}</td>
                <td>- no comment -</td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>{{ "-1 day"|date("d.m.Y") }}</td>
                <td>{{ 'Simeon V.' }}</td>
                <td>- no comment -</td>
            </tr>
            <tr>
                <th scope="row">1</th>
                <td>{{ "-15 days"|date("d.m.Y") }}</td>
                <td>{{ 'Slovan S.' }}</td>
                <td>- no comment -</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}